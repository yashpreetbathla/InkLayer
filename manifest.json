{
  "manifest_version": 3,
  "name": "InkLayer",
  "version": "1.0.0",
  "description": "Annotate any webpage with a full-page ink canvas. Draw, highlight, and capture with one click.",
  "permissions": ["activeTab", "tabs", "scripting", "clipboardWrite"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background/service-worker.js"
  },
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": [
      "content/tools/freehand.js",
      "content/tools/rect.js",
      "content/tools/circle.js",
      "content/tools/arrow.js",
      "content/tools/eraser.js",
      "content/drawing-engine.js",
      "content/canvas-overlay.js",
      "content/toolbar.js",
      "content/content.js"
    ],
    "css": ["content/content.css"],
    "run_at": "document_idle",
    "all_frames": false
  }],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
